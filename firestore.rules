
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    //----------------------------------------------------------------------
    // Helper Functions
    //----------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isRole(role) {
      return isSignedIn() && getUserData(request.auth.uid).role == role;
    }
    
    function isAdmin() {
      // Check for custom claims first, then fall back to document-based role.
      // This is a more robust way but for now we stick to document role.
      return isSignedIn() && (isRole('Admin') || isRole('Super Admin'));
    }

    function isSuperAdmin() {
        return isSignedIn() && isRole('Super Admin');
    }

    // This function checks if the 'users' collection is empty.
    // It is used to assign the 'Super Admin' role to the very first user.
    function isFirstUser() {
      return !exists(/databases/$(database)/documents/users);
    }
    
    //----------------------------------------------------------------------
    // Public Read-Only Collections (Admin-Managed)
    //----------------------------------------------------------------------

    match /vocationalPrograms/{docId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    match /newsArticles/{docId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    match /testimonials/{docId} {
        allow get, list: if true;
        allow write: if isAdmin();
    }

    match /galleryAlbums/{docId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    //----------------------------------------------------------------------
    // User-Submitted Data
    //----------------------------------------------------------------------

    match /applications/{applicationId} {
      allow create: if true;
      // Admins can manage all applications
      allow get, list, update, delete: if isAdmin();
    }

    match /contactMessages/{contactMessageId} {
      allow create: if true;
      // Only admins can read submitted messages
      allow get, list: if isAdmin();
      // Messages are immutable by clients
      allow update, delete: if false; 
    }

    //----------------------------------------------------------------------
    // User-Specific Collections
    //----------------------------------------------------------------------

    match /users/{userId} {
      // Users can get their own data, Admins can get any user's data
      allow get: if isOwner(userId) || isAdmin();
      
      // Only Admins and Super Admins can list all users
      allow list: if isAdmin();
      
      // Allow user creation.
      // The role is set based on whether this is the first user or not.
      allow create: if isOwner(userId) && 
                      (
                        (request.resource.data.role == 'Super Admin' && isFirstUser()) ||
                        (request.resource.data.role == 'User' && !isFirstUser())
                      );
                      
      // A user can update their own displayName and photoURL, but not their role.
      allow update: if isOwner(userId) && 
                      !('role' in request.resource.data.keys());
      
      // Only a Super Admin can change other users' roles or delete users.
      allow update, delete: if isSuperAdmin(); 
    }
  }
}
