
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    //----------------------------------------------------------------------
    // Helper Functions
    //----------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             (getUserRole() == 'Admin' || getUserRole() == 'Super Admin');
    }

    function isSuperAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             getUserRole() == 'Super Admin';
    }
    
    function isFirstUser() {
      // Secure way to check for the first user during their own user document creation.
      return !exists(/databases/$(database)/documents/users);
    }
    
    //----------------------------------------------------------------------
    // Public Read-Only Collections (Admin-Managed)
    //----------------------------------------------------------------------

    match /vocationalPrograms/{docId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    match /newsArticles/{docId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    match /testimonials/{docId} {
        allow get, list: if true;
        allow write: if isAdmin();
    }

    match /galleryAlbums/{docId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    //----------------------------------------------------------------------
    // User-Submitted Data
    //----------------------------------------------------------------------

    match /applications/{applicationId} {
      allow create: if true;
      // Admins can read, list, and update the status of applications.
      allow get, list, update, delete: if isAdmin();
    }

    match /contactMessages/{contactMessageId} {
      allow create: if true;
      // Admins can get and list messages.
      allow get, list: if isAdmin();
      // Make messages immutable after creation by anyone else.
      allow update, delete: if false; 
    }

    //----------------------------------------------------------------------
    // User-Specific Collections
    //----------------------------------------------------------------------

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin(); // Allow both Admin and Super Admin to list users.
      
      // Allow user creation.
      // Anyone can create their own user document.
      // The `isFirstUser()` check within the `role` validation ensures only the first user can become Super Admin.
      allow create: if isOwner(userId) && 
                      (request.resource.data.role == 'Super Admin' ? isFirstUser() : request.resource.data.role == 'User');
                      
      // A user can update their own displayName and photoURL, but not their role.
      allow update: if isOwner(userId) && 
                      !('role' in request.resource.data.keys());
      
      // Only a Super Admin can change other users' roles or delete users.
      allow update, delete: if isSuperAdmin(); 
    }
  }
}
