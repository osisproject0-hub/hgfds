
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    //----------------------------------------------------------------------
    // Helper Functions
    //----------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'Super Admin']);
    }

    function isSuperAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Super Admin';
    }
    
    function isFirstUser() {
      // Check if the 'users' collection is empty.
      // This is a secure way to check for the first user during user creation.
      return !exists(/databases/$(database)/documents/users);
    }
    
    //----------------------------------------------------------------------
    // Public Read-Only Collections (Admin-Managed)
    //----------------------------------------------------------------------

    match /vocationalPrograms/{docId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    match /newsArticles/{docId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    match /testimonials/{docId} {
        allow get, list: if true;
        allow write: if isAdmin();
    }

    match /galleryAlbums/{docId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    //----------------------------------------------------------------------
    // User-Submitted Data
    //----------------------------------------------------------------------

    match /applications/{applicationId} {
      allow create: if true;
      // Admins can read, list, and update the status of applications.
      allow read, list, update, delete: if isAdmin();
    }

    match /contactMessages/{contactMessageId} {
      allow create: if true;
      allow read, list: if isAdmin();
      // Make messages immutable after creation.
      allow update, delete: if false; 
    }

    //----------------------------------------------------------------------
    // User-Specific Collections
    //----------------------------------------------------------------------

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      // Allow both Admin and Super Admin to list users.
      allow list: if isAdmin();
      
      // Allow user creation. The role is determined by the `isFirstUser` function.
      // Anyone can create a user document for themselves, but the role is protected.
      allow create: if isOwner(userId) && 
                      (request.resource.data.role == 'Super Admin' ? isFirstUser() : request.resource.data.role == 'User');
                      
      // A user can update their own displayName and photoURL, but not their role.
      allow update: if isOwner(userId) && 
                      !('role' in request.resource.data) &&
                      request.resource.data.keys().hasAny(['displayName', 'photoURL']);
      
      // Only a Super Admin can change other users' roles or delete users.
      allow update, delete: if isSuperAdmin(); 
    }
  }
}
