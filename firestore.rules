
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    //----------------------------------------------------------------------
    // Helper Functions
    //----------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isSignedIn() && getUserData().role == 'Admin';
    }
    
    //----------------------------------------------------------------------
    // Public Read-Only Collections (Admin-Managed)
    //----------------------------------------------------------------------

    match /vocationalPrograms/{docId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    match /newsArticles/{docId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    match /testimonials/{docId} {
        allow get, list: if true;
        allow write: if false;
    }

    match /galleryAlbums/{docId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    //----------------------------------------------------------------------
    // User-Submitted Data
    //----------------------------------------------------------------------

    match /applications/{applicationId} {
      allow create: if true;
      // Admins can manage all applications
      allow get, list, update, delete: if isAdmin();
    }

    match /contactMessages/{contactMessageId} {
      allow create: if true;
      // Admins can read and delete submitted messages
      allow get, list, delete: if isAdmin();
      // Messages are immutable by clients
      allow update: if false; 
    }

    //----------------------------------------------------------------------
    // User-Specific Collections
    //----------------------------------------------------------------------

    match /users/{userId} {
      // Anyone can create a user document during signup.
      allow create: if true;
      // Users can only read their own data. Admins can read anyone's data.
      allow get: if request.auth.uid == userId || isAdmin();
      // Only admins can list all users.
      allow list: if isAdmin();
      // Users can only update their own data. Admins can update anyone's data.
      allow update: if request.auth.uid == userId || isAdmin();
      // Only admins can delete users.
      allow delete: if isAdmin();
    }

    //----------------------------------------------------------------------
    // Site-Wide Settings (Admin only)
    //----------------------------------------------------------------------
    match /siteSettings/main {
      allow get: if true;
      allow write: if isAdmin();
    }
  }
}
