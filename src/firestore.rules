
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    //----------------------------------------------------------------------
    // Helper Functions
    //----------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }
    
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isSuperAdmin() {
       if (!isSignedIn()) {
        return false;
      }
      return getUserData(request.auth.uid).role == 'Super Admin';
    }

    function isGuru() {
      if (!isSignedIn()) {
        return false;
      }
      return getUserData(request.auth.uid).role == 'Guru';
    }
    
    //----------------------------------------------------------------------
    // Public Read-Only Collections (Admin-Managed)
    //----------------------------------------------------------------------

    match /vocationalPrograms/{docId} {
      allow get, list: if true;
      allow write: if isGuru() || isSuperAdmin();
    }

    match /newsArticles/{docId} {
      allow get, list: if true;
      allow write: if isGuru() || isSuperAdmin();
    }
    
    match /testimonials/{docId} {
        allow get, list: if true;
        allow write: if isGuru() || isSuperAdmin();
    }

    match /galleryAlbums/{docId} {
      allow get, list: if true;
      allow write: if isGuru() || isSuperAdmin();
    }

    //----------------------------------------------------------------------
    // Student Data
    //----------------------------------------------------------------------

    match /students/{studentId} {
        allow get, list, write: if isGuru() || isSuperAdmin();
        // Future: allow student to read their own data
        // allow get: if isGuru() || isSuperAdmin() || request.auth.uid == studentId
    }
    
    //----------------------------------------------------------------------
    // User-Submitted Data
    //----------------------------------------------------------------------

    match /applications/{applicationId} {
      allow create: if true;
      allow get, list, update, delete: if isGuru() || isSuperAdmin();
    }

    match /contactMessages/{contactMessageId} {
      allow create: if true;
      allow get, list, delete: if isGuru() || isSuperAdmin();
      allow update: if false; 
    }

    //----------------------------------------------------------------------
    // User-Specific Collections
    //----------------------------------------------------------------------

    match /users/{userId} {
      // Allow user creation for anyone (signup). This is critical.
      allow create: if true;

      // A user can get their own data, and Admins can get any user's data.
      allow get: if isSignedIn() && (request.auth.uid == userId || isGuru() || isSuperAdmin());
      
      // Only Admins can list all users.
      allow list: if isGuru() || isSuperAdmin();
                      
      // A user can update their own displayName and photoURL.
      // A Super Admin can update any user's role.
      // No one can change their own role unless they are a Super Admin (even then, they can't demote themselves via this rule).
      allow update: if isSignedIn() && 
                      (
                        // Case 1: Super Admin can update another user's role
                        (isSuperAdmin() && request.auth.uid != userId) ||
                        // Case 2: Any user can update their own non-role fields
                        (request.auth.uid == userId && !('role' in request.resource.data.keys()))
                      );
      
      // Only Super Admins can delete any user (except themselves).
      // Gurus can delete users with the 'Siswa' role, but not other Gurus or Super Admins.
      allow delete: if isSignedIn() && request.auth.uid != userId && 
                      (
                        isSuperAdmin() ||
                        (isGuru() && getUserData(userId).role == 'Siswa')
                      );
    }

    //----------------------------------------------------------------------
    // Site-Wide Settings (Admin only)
    //----------------------------------------------------------------------
    match /siteSettings/main {
      allow get, list: if true;
      allow write: if isGuru() || isSuperAdmin();
    }
  }
}
