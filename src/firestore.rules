
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    //----------------------------------------------------------------------
    // Helper Functions
    //----------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }
    
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isSuperAdmin() {
       if (!isSignedIn()) {
        return false;
      }
      return getUserData(request.auth.uid).role == 'Super Admin';
    }

    function isAdmin() {
      if (!isSignedIn()) {
        return false;
      }
      let userRole = getUserData(request.auth.uid).role;
      return userRole == 'Admin' || userRole == 'Super Admin';
    }
    
    //----------------------------------------------------------------------
    // Public Read-Only Collections (Admin-Managed)
    //----------------------------------------------------------------------

    match /vocationalPrograms/{docId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    match /newsArticles/{docId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    match /testimonials/{docId} {
        allow get, list: if true;
        allow write: if isAdmin();
    }

    match /galleryAlbums/{docId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    //----------------------------------------------------------------------
    // User-Submitted Data
    //----------------------------------------------------------------------

    match /applications/{applicationId} {
      allow create: if true;
      // Admins can manage all applications
      allow get, list, update, delete: if isAdmin();
    }

    match /contactMessages/{contactMessageId} {
      allow create: if true;
      // Admins can read and delete submitted messages
      allow get, list, delete: if isAdmin();
      // Messages are immutable by clients
      allow update: if false; 
    }

    //----------------------------------------------------------------------
    // User-Specific Collections
    //----------------------------------------------------------------------

    match /users/{userId} {
      // Allow user creation for anyone (signup). This is critical.
      allow create: if true;

      // A user can get their own data, and Admins can get any user's data.
      allow get: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      
      // Only Admins can list all users.
      allow list: if isAdmin();
                      
      // A user can update their own displayName and photoURL.
      // An Admin can update any user's displayName and photoURL.
      // A Super Admin can update any user's displayName, photoURL, and role.
      // No one can change their own role unless they are a Super Admin.
      allow update: if isSignedIn() && 
                      (
                        // Case 1: Super Admin can update anything on any user
                        isSuperAdmin() ||
                        // Case 2: Any user can update their own non-role fields
                        (request.auth.uid == userId && !('role' in request.resource.data.keys())) ||
                        // Case 3: An admin can update other users' non-role fields
                        (isAdmin() && request.auth.uid != userId && !('role' in request.resource.data.keys()))
                      );
      
      // Only Super Admins can delete any user (except themselves).
      // Admins can delete users with the 'User' role, but not other Admins or Super Admins.
      allow delete: if isSignedIn() && request.auth.uid != userId && 
                      (
                        isSuperAdmin() ||
                        (isAdmin() && getUserData(userId).role == 'User')
                      );
    }

    //----------------------------------------------------------------------
    // Site-Wide Settings (Admin only)
    //----------------------------------------------------------------------
    match /siteSettings/main {
      allow get, list: if true;
      allow write: if isAdmin();
    }
  }
}
